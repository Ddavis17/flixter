<dr />
<div class='booyah-box col-12 offset-1'>
  <% if @course.photo.url  %>
    <%= image_tag @course.photo.url %>
  <% end %>
  <h1><%= @course.title %></h1>
    <br />
  <div class='row'>
    <div class=' col-sm-4 col-12 text-center'>
      <span class= 'badge badge-default'>
        <h1><%= number_to_currency @course.cost %></h1>
      </span>
      <% if current_user && current_user == @course.user %>
        <br />
        <br />
        <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-primary' %>
      <% end %>

      <br />
      <br />
      <% if current_user && current_user.enrolled_in?(@course) %>
        <h3 class="badge badge-info">You Are Enrolled!</h3>
      <% else %>
        <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary', method: :post %>
      <% end %>
    </div>



    <div class=' col-8 offset-1'>
      <h1><%= @course.description %></h1>
    </div>
  </div>


  <div class='col-12'>
    <% @course.sections.each do |section| %>
    
      <div class='section text-center'>
        <h3><%= section.title %></h3>
        <div class="row">
            <% section.lessons.each do |lesson| %>
            <div class='col-12 col-sm-6'>
              <div class='lesson text-center'>
                <%= link_to lesson_path(lesson) do  %>
                
                    <b><%= lesson.title %></b>

                    -

                    <%= lesson.subtitle %>
                    <br />
                 <% end %>
              </div>
          </div>
            <% end %>
        </div>
        <br />
      </div>
    <% end %>
  </div>
</div>

